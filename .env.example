# Database
# PostgreSQL credentials (used by docker-compose.yml)
POSTGRES_USER=user
POSTGRES_PASSWORD=pass
POSTGRES_DB=dbname

# Database connection URL
# For local development with Docker Postgres:
DATABASE_URL=postgresql+asyncpg://user:pass@localhost:5432/dbname
# For SQLite (not recommended - JSONB won't work):
# DATABASE_URL='sqlite+aiosqlite:///data/strava_tortugas.db'

# Strava API Client
STRAVA_CLIENT_ID=
STRAVA_CLIENT_SECRET=
STRAVA_REDIRECT_URI=
STRAVA_VERIFY_TOKEN=
STRAVA_CLUB_ID=

# Webhook (required for Strava webhook events)
# Development: WEBHOOK_BASE_URL=http://localhost:8000
# Production: WEBHOOK_BASE_URL=https://yourdomain.com
WEBHOOK_BASE_URL=

# Environment
ENVIRONMENT=local
# Options: local, staging, production
# CORS_ORIGINS=["*"]
# LOG_LEVEL=INFO

# Security
ADMIN_API_KEY=
